<h1>投稿一覧</h1>

<table class="table">
  <tr>
    <th>PHOTO</th>
    <th>コメント</th>
    <th>投稿者</th>
    <th>機能</th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= image_tag article.image.url %></td>
    <td><%= article.content %></td>
    <td><%= @user.name %></td>

    <td><%= link_to '詳細を確認する', article_path(article.id) %></td>
  </tr>
<% end %>
</table>
